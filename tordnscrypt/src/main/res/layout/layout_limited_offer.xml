<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/idoAnnouncementCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        app:cardBackgroundColor="@color/backgroundTabsAndNavBars"
        app:cardCornerRadius="@dimen/size_8dp"
        app:cardElevation="@dimen/size_4dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/size_16dp"
            android:paddingTop="@dimen/size_16dp"
            android:paddingEnd="@dimen/size_12dp"
            android:paddingBottom="@dimen/size_16dp">

            <ImageView
                android:id="@+id/promoImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_promo_tor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/idoAnnouncementTitleTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_12dp"
                android:layout_marginEnd="@dimen/size_4dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/str_limited_offer_title"
                android:textAlignment="textStart"
                android:textColor="@color/colorAccent"
                app:layout_constraintEnd_toStartOf="@+id/closePopupButton"
                app:layout_constraintStart_toEndOf="@+id/promoImageView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/idoAnnouncementDescriptionTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_12dp"
                android:layout_marginEnd="@dimen/size_4dp"
                android:text="@string/str_limited_offer_description"
                android:textAlignment="textStart"
                android:textColor="@color/colorIconPrimary"
                app:layout_constraintEnd_toStartOf="@+id/closePopupButton"
                app:layout_constraintStart_toEndOf="@+id/promoImageView"
                app:layout_constraintTop_toBottomOf="@+id/idoAnnouncementTitleTextView" />

            <ImageView
                android:id="@+id/closePopupButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_cross"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>